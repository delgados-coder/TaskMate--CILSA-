 <div class="container-fluid">
    <div class="row flex-nowrap">
      <div class="col py-3">
        <div class="col-10 main-content">
          <div class="task-summary text-center mb-4">
            <span>Total Listas: <strong>{{totalCount}}</strong></span>
          </div>

          <h2>Mis Listas</h2>

          <div class="row">
            <div class="col-md-3">
              <div class="card text-center mb-4" style="cursor: pointer;" data-bs-toggle="modal"
                data-bs-target="#modalCrearLista">
                <div class="card-body">
                  <h5 class="card-title">AGREGAR</h5>
                </div>
              </div>
            </div>

            {{#each listas}}
            <div class="col-md-3">
              <div class="card mb-4">
                <div class="card-body">
                  <h5 class="card-title">{{nombre_lista}}</h5>
                  <p class="card-text">{{descripcion}}</p>
                  <button class="btn btn-info btn-ver" data-id="{{id}}">Ver</button>
                  <button class="btn btn-warning btn-editar" data-id="{{id}}">Editar</button>
                  <button class="btn btn-danger btn-eliminar" data-id="{{id}}">Eliminar</button>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalCrearLista" tabindex="-1" aria-labelledby="modalCrearListaLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Crear Nueva Lista</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="formCrearLista">
            <div class="mb-3">
              <label for="nombreListaCrear" class="form-label">Nombre de la Lista</label>
              <input type="text" class="form-control" id="nombreListaCrear" required />
            </div>
            <div class="mb-3">
              <label for="descripcionListaCrear" class="form-label">Descripción</label>
              <textarea class="form-control" id="descripcionListaCrear" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Crear lista</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalVerLista" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Detalles de la Lista</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <h5 id="verNombreLista"></h5>
          <p><strong>Descripción:</strong> <span id="verDescripcionLista"></span></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalEditarLista" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Editar Lista</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="formEditarLista">
            <div class="mb-3">
              <label for="editNombreLista" class="form-label">Nombre de la Lista</label>
              <input type="text" class="form-control" id="editNombreLista" required />
            </div>
            <div class="mb-3">
              <label for="editDescripcionLista" class="form-label">Descripción</label>
              <textarea class="form-control" id="editDescripcionLista" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/ListasDashboard.js"></script>
