    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- Contenido principal -->
            <div class="col py-3">
                <button class="btn btn-secondary" id="toggleOffcanvas">
                    ☰ Menú
                </button>
            <div class="d-flex justify-content-center">

                {{#if tareasGrid}}
                {{> tareas/tareas}}
                {{/if}}
                {{#if categoriasGrid}}
                {{> categorias/categorias}}
                {{/if}}
                {{#if listasGrid}}
                {{> listas/listas}}
                {{/if}}
            </div>
            </div>
        </div>
    </div>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasLabel">Dashboard</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body bg-secondary text-white">
            <ul class="nav nav-pills flex-column mb-auto align-items-start">
                <li class="nav-item">
                    <a href="/dashboard/tareas/" class="nav-link text-white">
                        Tareas
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/dashboard/categorias/" class="nav-link text-white">
                        Categorías
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/dashboard/listas/" class="nav-link text-white">
                        Listas
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const offcanvas = new bootstrap.Offcanvas(document.getElementById('offcanvasMenu'));

        document.getElementById('toggleOffcanvas').addEventListener('click', function () {
            offcanvas.show();
        });
    </script>